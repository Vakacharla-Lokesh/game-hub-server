    <div class="others">
        <h3 id="other">See more in <%= genre_type %></h3>
        <% let game_url = "" %>
        <div class="driving">
            <% for(let row_num = 0; row_num<rows-2; row_num++){ %>
            <div class="game">
                <% game_url = "/game-get/" + genre_type + "_" + row_num %>
                <a href = "<%= game_url %>">
                    <div class="game-content">
                        <h4 style="position: absolute; bottom: 5px;font-family: 'Times New Roman', Times, serif; color: aliceblue; left: 5px;"><%= name[row_num] %></h4>
                        <% let image_url = image[row_num] %>
